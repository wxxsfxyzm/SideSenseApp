<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/OverlayTheme"
    android:orientation="vertical"
    android:id="@id/all_apps_view_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layoutDirection="ltr"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.sonymobile.sidesenseapp.launcher.apps.allapps.ui.HeaderGridView
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@id/all_apps_grid_view"
        android:scrollbars="none"
        android:fadingEdgeLength="20.0dip"
        android:layout_width="@dimen/all_apps_view_width"
        android:layout_height="fill_parent"
        android:columnWidth="@dimen/all_apps_view_column_width"
        android:numColumns="3"
        android:requiresFadingEdge="vertical"
        android:importantForAccessibility="no"
        android:layoutDirection="locale"
        tools:ignore="MissingClass" />
</RelativeLayout>